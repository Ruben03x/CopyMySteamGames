<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Your Steam Games</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-dark text-light">
  <div class="container my-5">
    <h1 class="mb-4 text-center">View Your Steam Games</h1>

    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="d-none text-center mt-5">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-3">Fetching your games...</p>
    </div>

    <!-- Form -->
    <form id="steamForm" action="/games" method="POST" class="row g-3 justify-content-center">
      <div class="col-md-6">
        <label for="steamid" class="form-label">SteamID64 or Vanity URL</label>
        <input type="text" class="form-control" id="steamid" name="steamid" placeholder="e.g., 76561197960435530 or robinwalker" required>
        <div class="form-text">Enter your 64-bit SteamID or your Steam profile's Vanity URL.</div>
      </div>
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary mt-3">View Games</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Get form and spinner elements
    const form = document.getElementById('steamForm');
    const loadingSpinner = document.getElementById('loadingSpinner');

    // Add event listener to show spinner on form submission
    form.addEventListener('submit', function() {
      // Show the loading spinner
      loadingSpinner.classList.remove('d-none');

      // Hide the form to indicate loading state
      form.classList.add('d-none');
    });
  </script>
</body>
</html>
